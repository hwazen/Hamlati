<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foobar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="إختار من التالي"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            foobar:typeface="jf_flat_medium.ttf" />

        <com.ctrlplusz.anytextview.AnyButton
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_c"
            android:text="الحاج"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            foobar:typeface="jf_flat_regular.ttf" />

        <com.ctrlplusz.anytextview.AnyButton
            android:id="@+id/moalef"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_c"
            android:text="المتبرع"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            foobar:typeface="jf_flat_regular.ttf" />

        <com.ctrlplusz.anytextview.AnyButton
            android:id="@+id/dars"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_c"
            android:text="الحملة"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            foobar:typeface="jf_flat_regular.ttf" />

        <com.ctrlplusz.anytextview.AnyButton
            android:id="@+id/all"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/btn_c"
            android:text="المؤسسة"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            foobar:typeface="jf_flat_regular.ttf"/>


    </LinearLayout>

</android.support.v7.widget.CardView>